# EcoImmo France 2026 - Environment Variables Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PYTHON_ENV=development

# Database
DATABASE_URL=postgresql://ecoimmo:ecoimmo_dev_2026@localhost:5432/ecoimmo_france

# Redis
REDIS_URL=redis://localhost:6379/0

# French Government APIs (public, no keys required)
DVF_API_URL=https://data.economie.gouv.fr/api/v2/catalog/datasets/dvf/records
ADEME_DPE_API_URL=https://data.ademe.fr/data-fair/api/v1/datasets/dpe-v2-logements-existants

# Regulatory Constants (2026)
ELECTRICITY_CONVERSION_FACTOR=1.9

# GDPR Compliance
GDPR_ANONYMIZATION_LEVEL=postal_code
DATA_RETENTION_DAYS=90

# EU AI Act Compliance
EU_AI_ACT_COMPLIANCE=true
AI_TRANSPARENCY_BADGE=true

# Mistral AI (French Sovereign AI)
# Get your key at: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-latest

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MISTRAL_KEY=your_public_mistral_key_if_needed

# Security
SECRET_KEY=change_this_to_a_random_secret_key_in_production
API_KEY_HEADER=X-API-Key

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
